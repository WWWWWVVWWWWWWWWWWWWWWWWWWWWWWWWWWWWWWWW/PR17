<Page x:Class="PR17.Page1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PR17"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page1">

    <Grid Background="Wheat">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <TextBlock Text="Добавление / Редактирование товара" Grid.Row="0"
                   HorizontalAlignment="Center" FontSize="18" Margin="10"/>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center">
            <TextBox Width="300" Margin="5" />
            <TextBox Width="300" Margin="5" />
            <TextBox Width="300" Margin="5" />

            <Button Content="Сохранить" Width="150" HorizontalAlignment="Center"
                    Click="Save_Click"/>
        </StackPanel>
        
    </Grid>
</Page>
